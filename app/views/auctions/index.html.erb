
<p id="notice"><%= notice %></p>

<h1>Auctions</h1>

<%= simple_form_for :search, url: auctions_path, method: "GET", html: { class: 'form-inline' } do |f| %>
  <%= f.input :title, required: true, input_html: {value: ""} %>   
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>



<table class="table" width="100%" style="word-break:break-all;">
  <thead>
    <tr>
      <th width="15%">Title</th>
      <th width="30%">Description</th>
      <th width="10%">Price</th>
      <th width="25%">Time left</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @auctions.each do |auction| %>
  <% if current_user.present? %>
  	<% if auction.user_id == current_user.id %>
  	   <tr bgcolor="#66ffcc">
  	<%else%>
       <tr>
  	<%end%>
  <%end%>
        <td width="20%"><%= auction.title %></td>
        <% if auction.description.length > 40 %>
          <td width="20%"><%= auction.description[0,40] %>...</td>
        <%else%>
          <td width="20%"><%= auction.description%></td>
          <%end%>
        <td width="10%"><%= auction.price %> z≈Ç</td>
        <td width="5%"><%= TimeDifference.between(DateTime.now, auction.ends_at).humanize %></td>
        <div class=btn-group>
          <td><%= button_to 'Show', auction, :method => :get, :class => 'btn btn-primary' %></td>

          <% if current_user.present? %>
            <% if current_user.admin? %>
              <td><%= button_to 'Edit', edit_auction_path(auction), :method => :get, :class => 'btn btn-primary' %></td>
              <td><%= link_to 'Edit', edit_auction_path(auction) %></td>
              <td><%= link_to 'Destroy', auction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
          <%end%>
        </div>
      </tr>
      <% end %>  
  </tbody>
</table>
<br>

<%= button_to "New Auction", new_auction_path, :method => :get, :class=> 'btn btn-primary' %>
<center> <%= will_paginate @auctions%> </center>

