<%= simple_form_for @auction, :html => {:mutlipart=> true} do |f| %>
<%= f.input :title,required: true%>
<%= f.input :description,required: true%>
<%= f.input :price%>
<%= f.datetime_select(:ends_at, required: true) %>
</br>
</br>

<%= f.button :submit, required: true, :class=> 'btn btn-primary'%>
<%= button_to "Back", auctions_path, :method => :get, :class=> 'btn btn-primary' %>
<%end%>
