<% if @auction.active_boolean || @auction.ends_at < DateTime.now %>
  <div class="success">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
    <strong><center>STATUS active</center></strong>
  </div>
  <%else%>
  <div class="alert">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
    <strong><center>STATUS inactive</center></strong>
  </div>
<% end %>

<p>
  <strong>Description</strong>
  <br/>
  <div class="disc">
    <%= h(@auction.description).gsub(/\n/, '<br/>').html_safe %>
  </div>
</p>

<p>
  <strong>Start bid</strong>
  <%= @auction.price %>
</p>
<p>
  <strong>User</strong>
  <% @user.each do |user| %>
  <%= link_to user.email ,user %>
  <% end %>
</p>
<p>
    <strong>Time left</strong>
    <%= TimeDifference.between(DateTime.now, @auction.ends_at).humanize %>
  </p>
<table class="table table-striped table-dark">
  <tbody class="table table-striped table-dark">
  <p>
  	<strong>Current price</strong>
  	<% @tickets.each do |ticket|  %>
  	<tr>
          <td><%= ticket.amount %></td>
  	</tr>
  	<% end %>
  </p>
  </tbody>
</table>
<% if current_user.try(:admin) %>
  <%= link_to 'Edit', edit_auction_path(@auction) %> |
<% end %> 
<div class=btn-group>
  <%= button_to 'Back', auctions_path, :method => :get, :class=> 'btn btn-primary' %>
  <%= button_to "Bid", new_auction_ticket_path(@auction), :method => :get, :class=> 'btn btn-primary' %>
</div>


<p id="notice"><%= notice %></p>