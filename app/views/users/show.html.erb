<p id="notice"><%= notice %></p>

<% if current_user.id == @user.id %>
<h1>Your auctions</h1>
<%else%>
<h1>Users auctions</h1>
<%end%>
<table class="table"
  <thead>
    <tr>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @own_auctions.each do |auction| %>
      <tr>
        <% if auction.description.length > 70 %>
          <td width="40%"><%= auction.description[0,70] %>...</td>
        <%else%>
          <td width="40%"><%= auction.description%></td>
        <%end%>
        <td width="10%"><%= auction.price %> zł</td>
        <td><%= link_to 'Show', auction %></td>
        <td><%= link_to 'Edit', edit_auction_path(auction) %></td>
        <td><%= link_to 'Destroy', auction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>  
  </tbody>
</table>
<center> <%= will_paginate @own_auctions, :param_name => 'page1' %> </center>

