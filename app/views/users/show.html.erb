<p id="notice"><%= notice %></p>

<% if current_user.id == @user.id %>
<h1>Your auctions</h1>
<%else%>
<h1>Users auctions</h1>
<%end%>
<table class="table" style="word-break:break-all;">
  <thead>
    <tr>
      <th width="20%" >Title</th>
      <th width="50%">Description</th>
      <th width="10%">Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @own_auctions.each do |auction| %>
      <tr>
        <th width="20%" ><%= auction.title%></th>
        <% if auction.description.length > 40 %>
          <td width="50%" > 
            <%= auction.description[0,40] %>...
          </td>
        <%else%>
          <td width="50%"><%= auction.description%></td>
        <%end%>
        <td width="10%"><%= auction.price %> zł</td>
        <div class=btn-group>
          <td><%= button_to 'Show', auction, :method => :get, :class => 'btn btn-primary' %></td>

          <% if current_user.present? %>
            <% if current_user.admin? %>
              <td><%= button_to 'Edit', edit_auction_path(auction), :method => :get, :class => 'btn btn-primary' %></td>
              <td><%= link_to 'Edit', edit_auction_path(auction) %></td>
              <td><%= link_to 'Destroy', auction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
          <%end%>
        </div>
      </tr>
      <% end %>  
  </tbody>
</table>
<center> <%= will_paginate @own_auctions, :param_name => 'page1' %> </center>

<% if current_user.id == @user.id %>
